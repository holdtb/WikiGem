require 'thor'
require_relative 'WikiSearch'
class WikiGem < Thor
  default_task :summary

  desc "summary", "Get the summary text from a wikipedia page"
  def summary(*search)
    WikiSearch.find(search)
  end

  def method_missing(method, *args)
    args = ["summary", method.to_s] + args
    WikiGem.start(args)
  end

end

WikiGem.start(ARGV)
